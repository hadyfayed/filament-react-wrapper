{
  "name": "@hadyfayed/filament-react-wrapper",
  "version": "2.0.0",
  "description": "Advanced React component integration system for Laravel/Filament with versioning, code splitting, and enterprise features",
  "type": "module",
  "main": "dist/index.es.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "config",
    "resources",
    "src",
    "stories",
    "tests",
    "scripts",
    "*.md",
    "LICENSE*"
  ],
  "scripts": {
    "build": "node scripts/build.js --target=es",
    "build:laravel": "node scripts/build.js --target=laravel",
    "build:umd": "node scripts/build.js --target=umd",
    "build:storybook": "node scripts/build.js --target=storybook",
    "build:all": "node scripts/build.js --target=all",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"resources/**/*.{ts,tsx}\"",
    "analyze": "vite build --mode analyze",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "keywords": [
    "laravel",
    "filament",
    "react",
    "components",
    "integration",
    "php",
    "code-splitting",
    "versioning",
    "testing",
    "storybook",
    "enterprise",
    "typescript"
  ],
  "author": "Hady Fayed <hadyfayed@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.27.1",
    "@storybook/addon-actions": "^8.0.0",
    "@storybook/addon-backgrounds": "^8.0.0",
    "@storybook/addon-controls": "^8.0.0",
    "@storybook/addon-docs": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-viewport": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "chromatic": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "storybook": "^8.0.0",
    "terser": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hadyfayed/filament-react-wrapper"
  },
  "bugs": {
    "url": "https://github.com/hadyfayed/filament-react-wrapper/issues"
  },
  "homepage": "https://github.com/hadyfayed/filament-react-wrapper#readme"
}
